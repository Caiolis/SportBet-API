{
  "name": "sportbet-api",
  "version": "1.0.0",
  "description": "A sport bet API using node and typescript",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "prisma migrate deploy && node dist/src/server.js",
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "test": "dotenv -e .env.test prisma migrate deploy & dotenv -e .env.test jest -- -i",
    "test:coverage": "npm run test -- --coverage",
    "test:report": "dotenv -e .env.test prisma migrate deploy & dotenv -e .env.test jest -- --coverage --runInBand --coverageReporters=json-summary --coverageDirectory=coverage --collectCoverageFrom='**/*.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.7.3",
    "husky": "^9.0.6",
    "joi": "^17.12.0",
    "lint-staged": "^15.2.0",
    "req-sanitizer": "^0.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "npm": "^10.4.0",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
